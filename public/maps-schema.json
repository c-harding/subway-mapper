{
  "type": "object",
  "properties": {
    "font": {
      "description": "Font for the network",
      "allOf": [
        {
          "$ref": "#/definitions/FontNameOrReference"
        }
      ]
    },
    "lines": {
      "description": "Display settings for the lines in the network",
      "minItems": 1,
      "type": "array",
      "items": {
        "$ref": "#/definitions/LineDisplay"
      }
    },
    "lineSymbols": {
      "description": "Map of line types to their line symbols",
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/LineSymbol"
      }
    },
    "layoutConfig": {
      "description": "Layout configuration for the network",
      "allOf": [
        {
          "$ref": "#/definitions/LayoutConfig"
        }
      ]
    }
  },
  "id": "NetworkDisplay",
  "definitions": {
    "FontNameOrReference": {
      "anyOf": [
        {
          "description": "Google Fonts reference, starting with \"google-fonts:\"",
          "type": "string",
          "pattern": "^google-fonts:.*"
        },
        {
          "description": "Browser font reference, starting with \"browser:\"",
          "type": "string",
          "pattern": "^browser:.*"
        },
        {
          "type": "object",
          "properties": {
            "family": {
              "description": "Font family name",
              "type": "string"
            },
            "url": {
              "type": "string",
              "pattern": "^\\.\\/.*",
              "description": "Relative URL to font file"
            }
          },
          "required": [
            "url"
          ]
        }
      ],
      "id": "FontNameOrReference"
    },
    "LineDisplay": {
      "type": "object",
      "properties": {
        "id": {
          "description": "The ID of the line to apply these display settings to",
          "type": "string",
          "minLength": 1
        },
        "name": {
          "description": "The name of the line to apply these display settings to. If an ID is also provided, this field overrides the user-visible name of the line.",
          "type": "string",
          "minLength": 1
        },
        "color": {
          "type": "string"
        },
        "overlayColor": {
          "type": "string"
        },
        "lineType": {
          "type": "string"
        },
        "directions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "start": {
                "description": "The name of the first station in the segment",
                "type": "string"
              },
              "end": {
                "description": "The name of the last station in the segment",
                "type": "string"
              },
              "direction": {
                "type": "string",
                "enum": [
                  "n",
                  "ne",
                  "e",
                  "se",
                  "s",
                  "sw",
                  "w",
                  "nw"
                ],
                "description": "The direction of the line segment"
              }
            },
            "required": [
              "direction"
            ]
          }
        },
        "labelPositions": {
          "type": "object",
          "additionalProperties": {
            "nullable": true,
            "type": "string",
            "enum": [
              "n",
              "ne",
              "e",
              "se",
              "s",
              "sw",
              "w",
              "nw"
            ]
          }
        }
      },
      "id": "LineDisplay",
      "allOf": [
        {
          "$ref": "#/definitions/RawLineDisplay"
        }
      ]
    },
    "RawLineDisplay": {
      "type": "object",
      "properties": {
        "id": {
          "description": "The ID of the line to apply these display settings to",
          "type": "string",
          "minLength": 1
        },
        "name": {
          "description": "The name of the line to apply these display settings to. If an ID is also provided, this field overrides the user-visible name of the line.",
          "type": "string",
          "minLength": 1
        },
        "color": {
          "type": "string"
        },
        "overlayColor": {
          "type": "string"
        },
        "lineType": {
          "type": "string"
        },
        "directions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "start": {
                "description": "The name of the first station in the segment",
                "type": "string"
              },
              "end": {
                "description": "The name of the last station in the segment",
                "type": "string"
              },
              "direction": {
                "type": "string",
                "enum": [
                  "n",
                  "ne",
                  "e",
                  "se",
                  "s",
                  "sw",
                  "w",
                  "nw"
                ],
                "description": "The direction of the line segment"
              }
            },
            "required": [
              "direction"
            ]
          }
        },
        "labelPositions": {
          "type": "object",
          "additionalProperties": {
            "nullable": true,
            "type": "string",
            "enum": [
              "n",
              "ne",
              "e",
              "se",
              "s",
              "sw",
              "w",
              "nw"
            ]
          }
        }
      },
      "id": "RawLineDisplay"
    },
    "LineSymbol": {
      "type": "object",
      "properties": {
        "shape": {
          "description": "The shape of the line’s number symbol",
          "type": "string",
          "enum": [
            "oval",
            "rectangle",
            "pill"
          ]
        },
        "width": {
          "description": "The width of the line’s number symbol",
          "type": "number"
        },
        "height": {
          "description": "The height of the line’s number symbol",
          "type": "number"
        },
        "padding": {
          "description": "Padding inside the line’s number symbol",
          "allOf": [
            {
              "$ref": "#/definitions/Padding"
            }
          ]
        },
        "font": {
          "description": "Font for the line’s number symbol",
          "allOf": [
            {
              "$ref": "#/definitions/FontNameOrReference"
            }
          ]
        },
        "fontWeight": {
          "type": "number"
        },
        "fontSize": {
          "type": "number"
        },
        "baseLineShift": {
          "description": "Vertical shift (positive is down) for the line’s number in the symbol",
          "type": "number"
        }
      },
      "description": "Settings for a line’s number symbol",
      "id": "LineSymbol"
    },
    "Padding": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "object",
          "additionalProperties": {
            "type": "number"
          },
          "required": [
            "x",
            "y",
            "top",
            "bottom",
            "left",
            "right"
          ]
        }
      ],
      "id": "Padding"
    },
    "LayoutConfig": {
      "type": "object",
      "properties": {
        "padding": {
          "description": "Padding around the map",
          "allOf": [
            {
              "$ref": "#/definitions/Padding"
            }
          ]
        },
        "spacing": {
          "description": "Spacing settings",
          "type": "object",
          "properties": {
            "marker": {
              "description": "Spacing around markers",
              "allOf": [
                {
                  "$ref": "#/definitions/Spacing"
                }
              ]
            },
            "label": {
              "description": "Spacing around labels",
              "allOf": [
                {
                  "$ref": "#/definitions/Spacing"
                }
              ]
            }
          }
        },
        "gap": {
          "description": "Gap settings",
          "type": "object",
          "properties": {
            "markerLabel": {
              "description": "Gap between markers and labels",
              "allOf": [
                {
                  "$ref": "#/definitions/Spacing"
                }
              ]
            }
          }
        },
        "lineWidth": {
          "description": "Width of the lines",
          "type": "number",
          "minimum": 0
        },
        "curve": {
          "description": "Curve settings",
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "radius": {
                  "type": "number",
                  "minimum": 0,
                  "description": "Radius of curves"
                }
              },
              "required": [
                "radius"
              ]
            },
            {
              "type": "object",
              "properties": {
                "curvature": {
                  "type": "number",
                  "minimum": 0,
                  "description": "Curvature of curves (distance from angled point to start of curve"
                }
              },
              "required": [
                "curvature"
              ]
            }
          ]
        },
        "marker": {
          "description": "Marker settings",
          "type": "object",
          "properties": {
            "radius": {
              "description": "Radius of markers",
              "type": "number",
              "minimum": 0
            },
            "strokeWidth": {
              "description": "Stroke width of markers",
              "type": "number",
              "minimum": 0
            }
          }
        },
        "label": {
          "description": "Label settings",
          "type": "object",
          "properties": {
            "fontSize": {
              "description": "Font size for labels",
              "type": "number",
              "minimum": 1
            },
            "fontWeight": {
              "description": "Font weight for labels",
              "type": "number",
              "minimum": 100,
              "maximum": 900
            },
            "lineHeight": {
              "description": "Line height for multi-line labels",
              "type": "number"
            }
          }
        }
      },
      "id": "LayoutConfig"
    },
    "Spacing": {
      "anyOf": [
        {
          "description": "Uniform spacing in all directions",
          "type": "number"
        },
        {
          "description": "Spacing in x and y directions",
          "type": "object",
          "additionalProperties": {
            "type": "number"
          },
          "required": [
            "x",
            "y"
          ]
        }
      ],
      "id": "Spacing"
    }
  }
}