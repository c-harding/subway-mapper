{
  "type": "object",
  "properties": {
    "font": {
      "allOf": [
        {
          "$ref": "#/definitions/FontNameOrReference"
        }
      ]
    },
    "lines": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/LineDisplay"
      }
    },
    "lineTypes": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/LineType"
      }
    }
  },
  "required": [
    "lines"
  ],
  "id": "NetworkDisplay",
  "definitions": {
    "FontNameOrReference": {
      "anyOf": [
        {
          "description": "Google Fonts reference, starting with \"google-fonts:\"",
          "type": "string",
          "pattern": "^google-fonts:.*"
        },
        {
          "description": "Browser font reference, starting with \"browser:\"",
          "type": "string",
          "pattern": "^browser:.*"
        },
        {
          "type": "object",
          "properties": {
            "family": {
              "description": "Font family name",
              "type": "string"
            },
            "url": {
              "type": "string",
              "pattern": "^\\.\\/.*",
              "description": "Relative URL to font file"
            }
          },
          "required": [
            "url"
          ]
        }
      ],
      "id": "FontNameOrReference"
    },
    "LineDisplay": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "color": {
          "type": "string"
        },
        "overlayColor": {
          "type": "string"
        },
        "lineType": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ],
      "id": "LineDisplay"
    },
    "LineType": {
      "type": "object",
      "properties": {
        "shape": {
          "type": "string",
          "enum": [
            "oval",
            "rectangle",
            "pill"
          ]
        },
        "width": {
          "type": "number"
        },
        "height": {
          "type": "number"
        },
        "padding": {
          "allOf": [
            {
              "$ref": "#/definitions/Padding"
            }
          ]
        },
        "font": {
          "allOf": [
            {
              "$ref": "#/definitions/FontNameOrReference"
            }
          ]
        },
        "fontWeight": {
          "type": "number"
        },
        "fontSize": {
          "type": "number"
        },
        "baseLineShift": {
          "type": "number"
        }
      },
      "id": "LineType"
    },
    "Padding": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "object",
          "additionalProperties": {
            "type": "number"
          },
          "required": [
            "x",
            "y",
            "top",
            "bottom",
            "left",
            "right"
          ]
        }
      ],
      "id": "Padding"
    }
  }
}