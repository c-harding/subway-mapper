{
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "font": {
      "anyOf": [
        {
          "description": "Google Fonts reference, starting with \"google-fonts:\"",
          "type": "string",
          "pattern": "^google-fonts:.*"
        },
        {
          "description": "Browser font reference, starting with \"browser:\"",
          "type": "string",
          "pattern": "^browser:.*"
        },
        {
          "type": "object",
          "properties": {
            "family": {
              "description": "Font family name",
              "type": "string"
            },
            "url": {
              "type": "string",
              "pattern": "^\\.\\/.*",
              "description": "Relative URL to font file"
            }
          },
          "required": [
            "url"
          ]
        }
      ]
    },
    "lines": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "color": {
            "type": "string"
          },
          "stations": {
            "type": "array",
            "items": {
              "anyOf": [
                {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "name"
                  ]
                },
                {
                  "type": "string"
                }
              ]
            }
          }
        },
        "required": [
          "name",
          "color",
          "stations"
        ]
      }
    }
  },
  "required": [
    "lines"
  ]
}
