{
  "id": "Network",
  "type": "object",
  "properties": {
    "font": {
      "description": "Font for the network",
      "allOf": [
        {
          "$ref": "#/definitions/FontNameOrReference"
        }
      ]
    },
    "lines": {
      "minItems": 1,
      "type": "array",
      "items": {
        "$ref": "#/definitions/Line"
      },
      "description": "List of lines in the network"
    },
    "lineSymbols": {
      "description": "Map of line types to their line symbols",
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/LineSymbol"
      }
    },
    "name": {
      "description": "Name of the network",
      "type": "string"
    },
    "hyphenation": {
      "description": "List of hyphenated words, with ~ marking the hyphenation point",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "lines"
  ],
  "definitions": {
    "FontNameOrReference": {
      "anyOf": [
        {
          "description": "Google Fonts reference, starting with \"google-fonts:\"",
          "type": "string",
          "pattern": "^google-fonts:.*"
        },
        {
          "description": "Browser font reference, starting with \"browser:\"",
          "type": "string",
          "pattern": "^browser:.*"
        },
        {
          "type": "object",
          "properties": {
            "family": {
              "description": "Font family name",
              "type": "string"
            },
            "url": {
              "type": "string",
              "pattern": "^\\.\\/.*",
              "description": "Relative URL to font file"
            }
          },
          "required": [
            "url"
          ]
        }
      ],
      "id": "FontNameOrReference"
    },
    "Line": {
      "description": "All the stations along a line",
      "id": "Line",
      "type": "object",
      "properties": {
        "id": {
          "description": "The ID of the line. If not provided, the name is used instead.",
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Name of the line. This doubles as the unique identifier if id is not provided."
        },
        "color": {
          "type": "string"
        },
        "overlayColor": {
          "type": "string"
        },
        "lineType": {
          "type": "string"
        },
        "stations": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "lines": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "required": [
                  "name"
                ]
              },
              {
                "type": "string"
              }
            ]
          }
        }
      },
      "required": [
        "name",
        "stations"
      ]
    },
    "LineSymbol": {
      "type": "object",
      "properties": {
        "shape": {
          "description": "The shape of the line’s number symbol",
          "type": "string",
          "enum": [
            "oval",
            "rectangle",
            "pill"
          ]
        },
        "width": {
          "description": "The width of the line’s number symbol",
          "type": "number"
        },
        "height": {
          "description": "The height of the line’s number symbol",
          "type": "number"
        },
        "padding": {
          "description": "Padding inside the line’s number symbol",
          "allOf": [
            {
              "$ref": "#/definitions/Padding"
            }
          ]
        },
        "font": {
          "description": "Font for the line’s number symbol",
          "allOf": [
            {
              "$ref": "#/definitions/FontNameOrReference"
            }
          ]
        },
        "fontWeight": {
          "type": "number"
        },
        "fontSize": {
          "type": "number"
        },
        "baseLineShift": {
          "description": "Vertical shift (positive is down) for the line’s number in the symbol",
          "type": "number"
        }
      },
      "description": "Settings for a line’s number symbol",
      "id": "LineSymbol"
    },
    "Padding": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "object",
          "additionalProperties": {
            "type": "number"
          },
          "required": [
            "x",
            "y",
            "top",
            "bottom",
            "left",
            "right"
          ]
        }
      ],
      "id": "Padding"
    }
  }
}